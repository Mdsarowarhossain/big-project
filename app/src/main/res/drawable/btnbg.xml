<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <!-- fill/color -->
            <solid android:color="@color/app_main_color" />

            <!-- Control the width and height of the shape -->
            <!-- <size android:height="70dp" android:width="200dp" /> -->


            <!-- Control the radius of each corners -->
            <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" android:topLeftRadius="20dp" android:topRightRadius="20dp" />
        </shape></item>
    <item> <!-- A red ripple masked against an opaque rectangle. -->
<ripple android:color="@color/white">
            <item android:id="@android:id/mask" android:drawable="@android:color/white"/>
        </ripple></item>

</layer-list>