<resources>

    <style name="textstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_margin">  10dp</item>
        <item name="android:layout_marginVertical">   5dp</item>
        <item name="android:gravity">  center_horizontal</item>
        <item name="android:textColor">	@color/app_main_color</item>
        <item name="android:textSize">  20sp</item>
        <item name="android:textStyle">  bold</item>
    </style>

    <style name="smalltextstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_margin">  4dp</item>
        <item name="android:textColor">	@color/app_main_color</item>
        <item name="android:textSize">  15sp</item>
        <item name="android:textStyle">  bold</item>
    </style>

    <style name="white_small_textstyle">
        <item name="android:layout_margin">  4dp</item>
        <item name="android:textColor">	@color/white</item>
        <item name="android:textSize">  15sp</item>
        <item name="android:textStyle">  bold</item>
    </style>

    <style name="inputfield">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:background">  #ffd7e4fa</item>
        <item name="android:textColor">   #ff000000</item>
    </style>

    <style name="inputfieldlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:layout_marginEnd">  32dp</item>
        <item name="android:layout_marginStart">   32dp</item>
        <item name="android:background">  @color/white</item>
        <item name="android:layout_marginTop">   32dp</item>
        <item name="android:background">  #ffd7e4fa</item>
        <item name="android:textColor">   #ff000000</item>
        <item name="android:outlineSpotShadowColor">  @color/black</item>
        <item name="android:textColor">   @color/black</item>
        <item name="android:textColorHint">  #ff000000</item>
    </style>

</resources>