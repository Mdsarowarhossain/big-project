<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp"
    android:orientation="vertical" >

    <!-- start profile -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/cardimage"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/profile_totalbdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 BDT"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" >
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/profile_referid_image"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_margin="4dp"
                        android:src="@drawable/copy"
                        android:tint="@color/app_main_color" >
                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginRight="4dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Refer Id"
                            android:textColor="@color/app_main_color"
                            android:textSize="16sp"
                            android:textStyle="bold" >
                        </TextView>

                        <TextView
                            android:id="@+id/profile_refrid_field"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textColor="@color/app_main_color"
                            android:textSize="14sp"
                            android:textStyle="bold" >
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_margin="4dp"
                        android:src="@drawable/refer"
                        android:tint="@color/app_main_color" >
                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginRight="4dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Refer"
                            android:textColor="@color/app_main_color"
                            android:textSize="16sp"
                            android:textStyle="bold" >
                        </TextView>

                        <TextView
                            android:id="@+id/profile_total_refer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="...."
                            android:textColor="@color/app_main_color"
                            android:textSize="14sp"
                            android:textStyle="bold" >
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:layout_margin="4dp"
                        android:src="@drawable/invalid"
                        android:tint="@color/app_main_color" >
                    </ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginRight="4dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invalid Click"
                            android:textColor="@color/app_main_color"
                            android:textSize="16sp"
                            android:textStyle="bold" >
                        </TextView>

                        <TextView
                            android:id="@+id/profile_invalidclick_field"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textColor="@color/app_main_color"
                            android:textSize="14sp"
                            android:textStyle="bold" >
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/profile"
            android:padding="4dp"
            android:paddingHorizontal="8dp"
            android:text="Account Information"
            android:textColor="@color/app_main_color"
            android:textSize="21sp"
            android:textStyle="bold" >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/profile"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/profile"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/profile"
                        android:padding="4dp"
                        android:text="Name"
                        android:textColor="@color/app_main_color"
                        android:textSize="18sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/profile"
                        android:padding="4dp"
                        android:paddingEnd="8dp"
                        android:text="....."
                        android:textColor="@color/app_main_color"
                        android:textSize="15sp"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/profile"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/profile"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/profile"
                        android:padding="4dp"
                        android:text="Phone Number"
                        android:textColor="@color/app_main_color"
                        android:textSize="18sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/profile_phone_info"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/profile"
                        android:padding="4dp"
                        android:paddingEnd="8dp"
                        android:text="....."
                        android:textColor="@color/app_main_color"
                        android:textSize="15sp"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/profile"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/profile"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/profile"
                        android:padding="4dp"
                        android:text="Total Refer "
                        android:textColor="@color/app_main_color"
                        android:textSize="18sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/profile_totalregfer_info_section"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/profile"
                        android:padding="4dp"
                        android:paddingEnd="8dp"
                        android:text="....."
                        android:textColor="@color/app_main_color"
                        android:textSize="15sp"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/profile"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/profile"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/profile"
                        android:padding="4dp"
                        android:text="Total Withdraw"
                        android:textColor="@color/app_main_color"
                        android:textSize="18sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/profile_total_withdraw"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/profile"
                        android:padding="4dp"
                        android:paddingEnd="8dp"
                        android:text="....."
                        android:textColor="@color/app_main_color"
                        android:textSize="15sp"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/profile"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/profile"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/profile"
                        android:padding="4dp"
                        android:text="Joining Date"
                        android:textColor="@color/app_main_color"
                        android:textSize="18sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/profile_joining_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/profile"
                        android:padding="4dp"
                        android:paddingEnd="8dp"
                        android:text="....."
                        android:textColor="@color/app_main_color"
                        android:textSize="15sp"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/profile"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/profile"
                    android:orientation="horizontal"
                    android:weightSum="2" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/profile"
                        android:padding="4dp"
                        android:text="Device Ip Address"
                        android:textColor="@color/app_main_color"
                        android:textSize="18sp"
                        android:textStyle="bold" >
                    </TextView>

                    <TextView
                        android:id="@+id/profile_ip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/profile"
                        android:padding="4dp"
                        android:paddingEnd="8dp"
                        android:text="....."
                        android:textColor="@color/app_main_color"
                        android:textSize="15sp"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout> <!-- end profile -->
