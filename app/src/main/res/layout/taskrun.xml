<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/taskrun_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/border"
        android:gravity="start"
        android:minHeight="120dp"
        android:padding="3dp" >

        <TextView
            android:id="@+id/taskrun_notice"
            style="@style/smalltextstyle"
            android:text="@string/task_notice" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/taskrun_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/app_main_color"
            android:orientation="vertical"
            android:padding="8dp" >

            <TextView
                android:id="@+id/taskrun_viewtv"
                style="@style/white_small_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:text="5 Click" />

            <TextView
                android:id="@+id/taskrun_pointtv"
                style="@style/white_small_textstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:text="100 point" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/taskrun_ss"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/nagod" />

        <TextView
            android:id="@+id/taskrun_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@color/app_main_color"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:paddingStart="5dp"
            android:text="keyword"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/taskrun_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btnbg"
            android:backgroundTint="@color/app_main_color"
            android:maxHeight="80dp"
            android:text="Copy "
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>